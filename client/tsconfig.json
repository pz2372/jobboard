{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2019", "dom"], 
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",  // For React 17+ JSX transform
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["react", "react-dom"]
  },
  "include": ["src"]
}
